<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_rounded"
    android:padding="10dp"
    android:layout_marginBottom="12dp"
    app:layout_constraintBottom_toBottomOf="@+id/searchViewJugadores"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/fotoIntegrante"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/nombreIntegrante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Alex"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoIntegrante">
    </TextView>

    <TextView
        android:id="@+id/especializacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:text = "Front-end"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/nombreIntegrante"
        app:layout_constraintStart_toEndOf="@+id/fotoIntegrante">
    </TextView>
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        tools:text = "Gran pasión por la programación y por el arte digital."
        app:layout_constraintTop_toBottomOf="@+id/especializacion"
        app:layout_constraintStart_toEndOf="@+id/fotoIntegrante">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>